<Page
    x:Class="HHChaosToolkit.Sample.Views.PickerServicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HHChaosToolkit.Sample.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding PickerServiceViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Padding="10">
        <Grid.Background>
            <SolidColorBrush Color="{Binding PickedColor}"/>
        </Grid.Background>
        <StackPanel>
            <Button Content="PickBackgroundColor" Command="{Binding PickBackgroundColorCommand}"/>
            <Button Content="PickBackgroundColor(with custom PickerOpenOption and AcrylicBrush)" Command="{Binding PickBackgroundColorWithCustomOptionCommand}"/>
            <Button Content="InputDialog(Win8Style)" Command="{Binding OpenInputDialogCommand}"/>
            <Button Content="InputDialog(with custom PickerOpenOption and AcrylicBrush)" Command="{Binding OpenInputDialogWithCustomOptionCommand}"/>
        </StackPanel>
    </Grid>
</Page>
